@using Entity.Concrete;
@model List<Category>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <br />
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Adi</th>
            <th>Aciklama</th>
            <th>Durum</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description </td>
                <td>@category.Status</td>
            </tr>
        }

    </table>
    <a href="/Categories/Add" class="btn btn-primary">Yeni Kategori</a>
</body>
</html>
